    <TextView
        android:id="@+id/tv"
        style="@style/ActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/dailyRep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="generatePdfServer">

        <Button
            android:id="@+id/generate_btn"
            style="@style/BtnDailyInfosStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:onClick="generatePdfServer"
            android:paddingRight="120dp"
            android:paddingTop="20dp"
            android:text="@string/btn_send_report"
            android:textAlignment="viewEnd" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/generate_btn"
            android:layout_alignEnd="@+id/generate_btn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/generate_btn"
            android:layout_alignTop="@+id/generate_btn"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:elevation="2dp"
            android:onClick="onClick_1"
            android:paddingTop="10dp"
            android:src="@drawable/send_message" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="generatePdfV2">

        <Button
            android:id="@+id/generate_btn_v2"
            style="@style/BtnDailyInfosStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:onClick="generatePdfV2"
            android:paddingRight="120dp"
            android:paddingTop="20dp"
            android:text="@string/print_report"
            android:textAlignment="viewEnd" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/generate_btn_v2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/generate_btn_v2"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:elevation="2dp"
            android:onClick="generatePdfV2"
            android:paddingTop="10dp"
            android:src="@drawable/printer" />

    </RelativeLayout>
