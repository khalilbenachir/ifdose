<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context="com.ifdose.app.ma.ifdose.app.WelcomeActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header1">


        <ImageView
            android:id="@+id/diaaheader"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:elevation="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/homeinvstm1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/homecenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_generate_rapport" />

        <Button
            android:id="@+id/btn_generate_rapport"
            style="@style/BtnHexStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:onClick="onClick"
            android:text="@string/calcul_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diaaheader" />

        <Button
            android:id="@+id/button"
            style="@style/BtnHexStyle"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="64dp"
            android:onClick="onClick_1"
            android:text="@string/rapport_btn"
            app:layout_constraintLeft_toRightOf="@+id/homeinvstm1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/homeinvstm1" />

        <Button
            android:id="@+id/buttongran6"
            style="@style/BtnHexStyle"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="0dp"
            android:onClick="onClick_3"
            android:text="@string/add_meal_btn"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/homeinvstm1"
            app:layout_constraintTop_toTopOf="@+id/button" />

        <ImageView
            android:id="@+id/Footer"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/foterhome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
